<Window x:Class="Amplicacion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Amplicacion"
        mc:Ignorable="d"
        Title="MainWindow" Height="296" Width="584">


    <StackPanel x:Name="Panel1"   Width="550" HorizontalAlignment="Left" VerticalAlignment="Top" Height="240" Margin="5,5,0,0">

        <Grid Margin="5,80,0,0" Width="190" HorizontalAlignment="Left" >
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45"/>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="65"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <TextBox HorizontalAlignment="Left" Height="14" Margin="5,5,0,0" TextWrapping="Wrap" Text="Epsilon:" VerticalAlignment="Top" Width="41" FontSize="10" Grid.Column="0" Grid.Row="0" BorderBrush="White" Grid.ColumnSpan="2"/>
            <TextBox x:Name="textEpsilon" HorizontalAlignment="Left" Height="14" Margin="1.2,5,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="35" FontSize="10" Grid.Column="1" Grid.Row="0"/>
            <TextBox HorizontalAlignment="Left" Height="14" Margin="5,5.4,0,0" TextWrapping="Wrap" Text="M:" VerticalAlignment="Top" Width="41" FontSize="10" Grid.Column="0" Grid.Row="1" BorderBrush="White" Grid.ColumnSpan="2"/>
            <TextBox x:Name="textM" HorizontalAlignment="Left" Height="14" Margin="1.2,5.4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="35" FontSize="10" Grid.Column="1" Grid.Row="1"/>
            <TextBox HorizontalAlignment="Left" Height="14" Margin="5,4.6,0,0" TextWrapping="Wrap" Text="Delta:" VerticalAlignment="Top" Width="41" FontSize="10" Grid.Column="0" Grid.Row="2" BorderBrush="White" Grid.ColumnSpan="2"/>
            <TextBox x:Name="textDelta" HorizontalAlignment="Left" Height="14" Margin="1.2,4.6,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="35" FontSize="10" Grid.Column="1" Grid.Row="2"/>

            <TextBox HorizontalAlignment="Left" Height="14" Margin="6.2,5,0,0" TextWrapping="Wrap" Text="Alpha:" VerticalAlignment="Top" Width="60" FontSize="10" Grid.Column="2" Grid.Row="0" BorderBrush="White" Grid.ColumnSpan="2"/>
            <TextBox x:Name="textAlpha" HorizontalAlignment="Left" Height="14" Margin="2.4,5,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="35" FontSize="10" Grid.Column="3" Grid.Row="0"/>
            <TextBox HorizontalAlignment="Left" Height="14" Margin="6.2,5.4,0,0" TextWrapping="Wrap" Text="Delta space:" VerticalAlignment="Top" Width="60" FontSize="10" Grid.Column="2" Grid.Row="1" BorderBrush="White" Grid.ColumnSpan="2"/>
            <TextBox x:Name="textDeltaSpace" HorizontalAlignment="Left" Height="14" Margin="2.4,5.4,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="35" FontSize="10" Grid.Column="3" Grid.Row="1"/>
            <TextBox HorizontalAlignment="Left" Height="14" Margin="6.2,4.6,0,0" TextWrapping="Wrap" Text="Delta time:" VerticalAlignment="Top" Width="60" FontSize="10" Grid.Column="2" Grid.Row="2" BorderBrush="White" Grid.ColumnSpan="2"/>
            <TextBox x:Name="textDeltaTime" HorizontalAlignment="Left" Height="14" Margin="2.4,4.6,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="35" FontSize="10" Grid.Column="3" Grid.Row="2"/>

        </Grid>
        <Grid x:Name="Rejilla" HorizontalAlignment="Left" VerticalAlignment="Top" Width ="200" Height="200" Margin="220,-150,0,0" Background="Gray" ShowGridLines="True">

            <Grid.ColumnDefinitions ></Grid.ColumnDefinitions>
            <Grid.RowDefinitions></Grid.RowDefinitions>
        </Grid>
        <Button HorizontalAlignment="Left" Content="Add new Pareameters" Margin="50,0,0.4,0" Width="105" Height="15" FontSize="10" Click="Button_Click"/>
        <TextBox HorizontalAlignment="Left" Height="14" Margin="125,-150,0,0" TextWrapping="Wrap" Text="Selected:" VerticalAlignment="Top" Width="60" FontSize="10"  BorderBrush="White"/>
        <TextBox x:Name="textSelectedPar" HorizontalAlignment="Left" Height="14" Margin="125,-135,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="65" FontSize="10" />
        <ListBox x:Name="ListBoxParametros" HorizontalAlignment="Left" Height="40" Margin="10,-150,0,0" VerticalAlignment="Top" Width="100" SelectionChanged="ListBox_SelectionChanged_1" AllowDrop="True" Grid.ColumnSpan="2" FontSize="10" MouseDoubleClick="ListParametros_MouseDoubleClick" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
        <Grid HorizontalAlignment="Left" Height="53" Margin="439,0,0,0" Width="61"/>

    </StackPanel>


</Window>
